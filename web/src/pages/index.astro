---
import Layout from "../layouts/Layout.astro";
import { PROYECTS } from "../data";
import Proyect from "../components/Proyect.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<Layout title="Proyectos con Javascript Vanilla">
  <Header />
  <section
    class="mt-12 grid place-items-center xl:grid-cols-3 gap-3 grid-cols-1 xl:px-24 px-2"
  >
    {
      PROYECTS.map((proyect) => (
        <Proyect
          web={proyect.web}
          name={proyect.name}
          title={proyect.title}
          description={proyect.description}
          tags={proyect.tags}
          github={proyect.github}
        />
      ))
    }
  </section>
  <Footer />
</Layout>
